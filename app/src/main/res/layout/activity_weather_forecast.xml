<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.areumcho.androidlabs.WeatherForecast">


    <TextView
        android:id="@+id/currentTemp"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:text="@string/currentTemp"
        android:visibility="visible" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/maxTemp"
            android:layout_marginTop="12dp"
            android:text="@string/progressBar" />

    <TextView
        android:id="@+id/maxTemp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currentTemp"
        android:text="@string/maxTemp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/minTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="21dp"
        android:text="@string/minTemp"
        android:visibility="visible" />

        <ImageView
            android:id="@+id/weatherImage"
            android:layout_width="162dp"
            android:layout_height="167dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            />




</LinearLayout>
